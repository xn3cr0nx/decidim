<div class="field hashtags__container">
  <%= form.text_field :title, autofocus: true, class: "js-hashtags", hashtaggable: true %>
</div>

<div class="field hashtags__container">
  <%= text_editor_for(form, :description, hashtaggable: true) %>
</div>

<div class="field">
  <%= form.select :type_of_meeting,
                  @form.type_of_meeting_select,
                  { include_blank: t(".select_a_meeting_type") },
                  { multiple: false } %>
</div>

<div class="field" id="location">
  <%= form.text_area :location %>
  <p class="help-text"><%= t(".location_help") %></p>
</div>

<div class="field" id="address">
  <%= form.text_field :address %>
  <p class="help-text"><%= t(".address_help") %></p>
</div>

<div class="field">
  <%= form.text_area :location_hints %>
  <p class="help-text"><%= t(".location_hints_help") %></p>
</div>

<div class="row column" id="meeting_online_meeting_link">
  <%= form.text_field :online_meeting_link %>
  <p class="help-text"><%= t(".online_meeting_link_help") %></p>
</div>

<div class="field">
  <%= form.datetime_field :start_time %>
</div>

<div class="field">
  <%= form.datetime_field :end_time %>
</div>

<% if current_participatory_space.has_subscopes? %>
  <div class="field">
    <%= scopes_picker_field form, :decidim_scope_id %>
  </div>
<% end %>

<div class="field">
  <%= form.categories_select :decidim_category_id, current_participatory_space.categories, prompt: t(".select_a_category"), disable_parents: false %>
</div>

<div class="field">
  <%= form.select :registration_type,
                  @form.registration_type_select,
                  { include_blank: t(".select_a_registration_type") },
                  { multiple: false } %>
</div>

<div class="row column" id="meeting_available_slots">
  <%= form.number_field :available_slots, value: 0 %>
  <p class="help-text"><%= t(".available_slots_link_help") %></p>
</div>

<div class="row column" id="meeting_registration_terms">
  <%= text_editor_for(form, :registration_terms, hashtaggable: true) %>
</div>

<div class="row column" id="meeting_external_registration_system_link">
  <%= form.text_field :external_registration_system_link %>
  <p class="help-text"><%= t(".external_registration_system_link_help") %></p>
  <label><%= t(".disclaimer", organization: current_organization.name) %></label>
  <br>
</div>

<div class="field">
  <%= form.select(
    :user_group_id,
    Decidim::UserGroups::ManageableUserGroups.for(current_user).verified.map{|g| [g.name, g.id]},
    prompt: current_user.name,
    label: t(".create_as")
  ) %>
</div>

<div class="row column" id="transparent">
  <%= form.check_box :terms_and_conditions, label: sanitize(t(".terms_and_conditions") + link_to( t(".terms_and_conditions_text"), component_settings.terms_and_conditions_url_for_meeting_creators)) %>
  <br>
</div>

<%= javascript_include_tag "decidim/meetings/meetings_form" %>
